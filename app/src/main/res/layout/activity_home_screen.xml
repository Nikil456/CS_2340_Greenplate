<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Screen"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/toInputMealScreenButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Input Meal"
        android:textSize="sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toRecipeScreenButton"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/toRecipeScreenButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Recipe"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/toInputMealScreenButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toInputMealScreenButton"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/toIngredientScreenButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ingredient"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toShoppingListScreenButton"
        app:layout_constraintTop_toBottomOf="@+id/toInputMealScreenButton"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/toShoppingListScreenButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Shopping List"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/toIngredientScreenButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toIngredientScreenButton"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>