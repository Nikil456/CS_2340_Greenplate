<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    tools:context=".views.ShoppingList">


    <Button
        android:id="@+id/toHomeScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="140dp"
        android:text="Home"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="276dp"
        android:text="ShoppingList"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ingredientList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44" />

    <Button
        android:id="@+id/ToMeal"
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="44dp"
        android:text="Meal"
        app:layout_constraintBottom_toTopOf="@+id/toPersonalInfoScreenButton"
        app:layout_constraintEnd_toStartOf="@+id/ToRecipe"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ToRecipe"
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="140dp"
        android:text="Recipe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toHomeScreenButton" />

    <Button
        android:id="@+id/toIngredient"
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="24dp"
        android:text="ingredient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toHomeScreenButton" />

    <Button
        android:id="@+id/toPersonalInfoScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="48dp"
        android:text="Personal Info"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ingredientList"
        android:layout_width="178dp"
        android:layout_height="311dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="268dp"
        android:text="Ingredients:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/ingredientBtnContainer"
        android:layout_width="193dp"
        android:layout_height="290dp"
        android:layout_marginStart="3dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/ingredientList"
        app:layout_constraintTop_toTopOf="@+id/ingredientList"></TableLayout>


    <Button
        android:id="@+id/toFormButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="264dp"
        android:text="Add/Remove"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="9dp"
        android:text="Update"
        app:layout_constraintBottom_toTopOf="@+id/ingredientBtnContainer"
        app:layout_constraintStart_toEndOf="@+id/toFormButton" />


</androidx.constraintlayout.widget.ConstraintLayout>